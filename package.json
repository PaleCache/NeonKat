{
  "name": "muzik-electro",
  "version": "0.1.0",
  "description": "A sick-ass music player with visualizer and miniplayer",
  "author": "cx <cx@yourdomain.com>",
  "homepage": "https://github.com/cx/muzik-electro",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux AppImage",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.palecache.Muzik-Electro",
    "productName": "Muzik Electro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer/**/*",
      "build/**/*"
    ],
    "asar": true,
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png",
      "category": "Audio"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3"
  }
}